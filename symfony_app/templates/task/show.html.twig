{% extends 'base.html.twig' %}

{% block title %}Détail de la tâche{% endblock %}

{% block body %}
    <h1>Détail de la tâche</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ task.state ? 'Faite' : 'A Faire' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_index') }}">Retour vers la liste</a>
    <a href="{{ path('app_task_edit', {'id': task.id}) }}">Editer</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
