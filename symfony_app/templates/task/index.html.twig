{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
    <h1>Liste des tâches</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Etat</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>
                <td>{{ task.state ? 'Fait' : 'A Faire' }}</td>
                <td>
                    <a href="{{ path('app_task_show', {'id': task.id}) }}"><button>Détail</button></a>
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}"><button>Editer</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune tâche trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_task_new') }}">Créer une nouvelle tâche</a>
{% endblock %}
